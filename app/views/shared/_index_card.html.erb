<div class="i-card">

  <div class="i-card-img">
    <%= cl_image_tag image.photo.key, height: 300, width: 400, crop: :fill %>
  </div>

  <div class="i-card-info">
    <p class="i-card-title"><%= image.title %></p>
    <p class="i-card-date"><%= image.date.strftime("#{image.date.day.ordinalize} %B %Y") %></p>
  </div>
</div>
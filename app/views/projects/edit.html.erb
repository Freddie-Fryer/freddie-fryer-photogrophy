<h1>Projects#edit</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h2>Edit <%= @project.title %>?</h2>

      <%= simple_form_for @project do |f| %>
        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.input :info, as: :text %>
          <%= f.input :spotify %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Update project", class: "edit-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
